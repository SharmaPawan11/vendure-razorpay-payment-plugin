{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "strict": true,

    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["node"],
    "declaration": true,
    "strictPropertyInitialization": false,
    "outDir": "./lib",
    "noLib": false,
  },
  "include": [
    "src/**/*"
  ]
}